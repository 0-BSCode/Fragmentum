{
  "manifest_version": 3,
  "name": "Background Color Changer",
  "version": "1.0.0",
  "description": "Simple extension to change the background color of any webpage",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Change Background Color"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
