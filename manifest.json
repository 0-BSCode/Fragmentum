{
  "manifest_version": 3,
  "name": "Fragmentum",
  "version": "2.0.0",
  "description": "Generate URL fragments from text selections and customize page backgrounds",
  "permissions": ["activeTab", "scripting", "clipboardWrite", "storage", "contextMenus"],
  "background": {
    "service_worker": "scripts/background.iife.js"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["scripts/content.iife.js"],
      "css": ["styles/content.css"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "public/icon16.png",
    "48": "public/icon48.png",
    "128": "public/icon128.png"
  }
}
