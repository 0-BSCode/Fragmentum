{
  "manifest_version": 3,
  "name": "Fragmentum",
  "version": "1.0.0",
  "description": "Collect text fragment highlights and compile them into shareable links",
  "permissions": ["activeTab", "clipboardWrite", "storage"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Fragmentum - View Highlights"
  },
  "background": {
    "service_worker": "scripts/background.iife.js"
  },
  "icons": {
    "16": "public/icon16.png",
    "48": "public/icon48.png",
    "128": "public/icon128.png"
  }
}
